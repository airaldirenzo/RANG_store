<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollViewPurchaseData">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.PurchaseDataFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutPurchaseData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/radioGroup"
        android:gravity="center|top">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="75dp"
        android:minHeight="75dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_credit_card_24" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="75dp"
            android:minHeight="75dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/baseline_credit_card_24" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="75dp"
            android:minHeight="75dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/baseline_attach_money_24" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutPurchaseData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textViewCardNumber"
        >
        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/image1"
            app:layout_constraintEnd_toEndOf="@id/image1"
            android:layout_marginHorizontal="30dp"
            android:layout_gravity="center"
            android:minWidth="75dp"

            android:text="Credito" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/image2"
            app:layout_constraintEnd_toEndOf="@id/image2"
            android:layout_marginHorizontal="30dp"
            android:layout_gravity="center"
            android:minWidth="75dp"
            android:text="Debito" />
        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/image3"
            app:layout_constraintEnd_toEndOf="@id/image3"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:minWidth="75dp"
            android:text="Transferencia" />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextCardNumber"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:text="Numero de tarjeta"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/editTextCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewCardNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textViewExpirationDate"
        android:inputType="number"
        android:layout_marginHorizontal="30dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewExpirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextCardNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextExpirationDate"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:text="Fecha de expiracion"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/editTextExpirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewExpirationDate"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="number"
        android:minEms="6"
        android:layout_marginHorizontal="30dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewSecurityCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextCardNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextExpirationDate"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:text="Codigo de seguridad"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/editTextSecurityCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewExpirationDate"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"
        android:minEms="6"
        android:layout_marginHorizontal="30dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextExpirationDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:text="Nombre en la tarjeta"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/editTextCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewCardName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text"
        android:layout_marginHorizontal="30dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextCardName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="200dp"
        android:text="Comprar"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewDepositTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:text="Porfavor realice una transferencia bancaria utilizando los siguientes datos:"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textViewTitleOwnerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewDepositTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:text="Nombre del propietario de la cuenta:" />

    <TextView
        android:id="@+id/textViewOwnerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewTitleOwnerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:text="RENZO GOUX"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewTitleCuit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewOwnerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:text="Cuit del propietario:" />

    <TextView
        android:id="@+id/textViewCuit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewTitleCuit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:text="20-12345678-1"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewTitleCBU_CVU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewCuit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:text="CBU/CVU:" />

    <TextView
        android:id="@+id/textViewCBU_CVU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewTitleCBU_CVU"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:text="8837440211100094709994"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewTitleAlias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewCBU_CVU"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:text="Alias:" />

    <TextView
        android:id="@+id/textViewAlias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewTitleAlias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:text="rang.store"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>